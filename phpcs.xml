<?xml version="1.0"?>
<ruleset name="Click to Chat - WordPress Coding Standards">
  <description>WordPress PHP code style for Click to Chat plugin.</description>

  <!-- Include WordPress core rules -->

  <rule ref="WordPress">

    <!-- Load only the Security category -->
    <rule ref="WordPress.Security"/>
    <!-- (Optional) Be extra strict on prepared SQL -->
    <rule ref="WordPress.DB.PreparedSQL"/>
    <rule ref="WordPress.DB.PreparedSQLPlaceholders"/>

    <!-- BYPASS: commented-out code detector -->
    <exclude name="Squiz.PHP.CommentedOutCode"/>
    <exclude name="Generic.CodeAnalysis.EmptyStatement.DetectedElse"/>

  </rule>

  <!-- Files/folders to scan -->
  <file>./</file>

  <!-- Exclude paths -->
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>

  <!-- Custom rules -->
  <rule ref="Squiz.PHP.CommentedOutCode">
    <exclude-pattern>*//*.*;$</exclude-pattern>
  </rule>
  <!-- Disable specific rules -->
  <rule ref="Squiz.Commenting.InlineComment.InvalidEndChar">
    <severity>0</severity>
  </rule>
  
  <!-- Ignore non-PHP assets -->
  <exclude-pattern>*.min.js</exclude-pattern>
  <exclude-pattern>*.js</exclude-pattern>
  <exclude-pattern>*.css</exclude-pattern>
  <exclude-pattern>*.html</exclude-pattern>
  <exclude-pattern>*.xml</exclude-pattern>

  <!-- Custom settings -->
  <config name="tab-width" value="4"/>
</ruleset>